{
  "schemaVersion": 1,
  "id": "rug",
  "version": "${version}",

  "name": "Rug",
  "description": "Extension Mod for gnembon's fabric-carpet with some more features",
  "authors": [
    "RubixDev"
  ],
  "contact": {
    "homepage": "https://github.com/RubixDev/Rug",
    "sources": "https://github.com/RubixDev/Rug",
    "issues": "https://github.com/RubixDev/Rug/issues"
  },

  "license": "CC0-1.0",
  "icon": "assets/rug/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "de.rubixdev.rug.RugServer"
    ]
  },
  "mixins": [
    "rug.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "carpet": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "flamingo": "*"
  },
  "custom": {
    "modmenu": {
      "parent": "carpet"
    }
  }
}
